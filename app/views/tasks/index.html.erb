<div class="container mt-5">
  <h1>Index</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed? %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="fa-regular fa-square"></i>
        <% end %>

        <%= "#{task.title}: #{task.details}" %>
      </li>
    <% end %>
  </ul>

</div>
