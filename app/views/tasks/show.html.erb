<div class="container mt-5">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <% if @task.completed? %>
    <p>
      <i class="far fa-check-square"></i> Completed
    </p>
  <% else %>
    <p>
      <i class="fa-regular fa-square"></i> Not completed yet
    </p>
  <% end %>

  <%= link_to 'Back to list', '/tasks' %>

</div>
